                        </div>
                        <!-- Sidebar -->
                        <div class="clearfix"></div>

                    </div>

                </div>
                <!-- Left Sidebar End -->
                <!--===============================================-->

                <!--===============================================-->
            <!-- Table beginning -->
            <h1>User index</h1>
            <div class="table-responsive">
                <table class="table" style="margin-left: 280px";>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Username</th>
                            <th>Roles</th>
                        <!-- <th>Password</th> -->
                            <th>Image</th>
                            <th>CreatedAt</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        <!-- <td>{{ user.password }}</td> -->
                            <td>{{ user.image }}</td>
                            <td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <a href="{{ path('user_new') }}">Create new</a>
        </div>
        
{% endblock %}
 